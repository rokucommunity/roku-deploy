{
  "name": "roku-deploy",
  "version": "2.5.0",
  "description": "Package and publish a Roku application using Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf out && tsc",
    "preversion": "npm run build && npm run tslint && npm run test",
    "prepublishOnly": "npm run build",
    "tslint": "tslint './src/**/*.ts' --outputAbsolutePaths",
    "test": "ts-mocha src/RokuDeploy.spec.ts --full-trace",
    "test:coverage": "nyc mocha src/RokuDeploy.spec.ts --full-trace",
    "test:device": "nyc mocha src/device.spec.ts --full-trace",
    "test:all": "nyc mocha src/**/*.spec.ts --full-trace",
    "publish-coverage-results": "nyc report --reporter=text-lcov | coveralls"
  },
  "typings": "dist/index.d.ts",
  "bin": {
    "roku-deploy": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RokuCommunity/roku-deploy.git"
  },
  "author": "",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/index.ts",
      "src/RokuDeploy.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/archiver": "^2.1.2",
    "@types/chai": "^4.1.2",
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.9.0",
    "@types/request": "^2.47.0",
    "@types/sinon": "^7.0.6",
    "adm-zip": "^0.4.11",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "coveralls": "^3.0.0",
    "mocha": "^5.2.0",
    "node-run-cmd": "^1.0.1",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.3",
    "source-map-support": "^0.5.3",
    "testdouble": "^3.5.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.9.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "dateformat": "^3.0.3",
    "fs-extra": "^7.0.1",
    "glob-all": "^3.1.0",
    "path": "^0.12.7",
    "q": "^1.5.1",
    "request": "^2.88.0"
  }
}
